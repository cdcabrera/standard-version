{
  "env": {
    "es2020": true,
    "jest": true,
    "mocha": true
  },
  "plugins": ["jsdoc", "node", "prettier"],
  "extends": [
    "eslint:recommended",
    "plugin:jsdoc/recommended",
    "plugin:node/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "plugins": ["mocha"],
      "extends": [
        "plugin:mocha/recommended"
      ],
      "rules": {
        "mocha/no-setup-in-describe": 1
      }
    },
    {
      "files": ["tests/**/*.js", "lib/**/*.js"],
      "plugins": ["jest"],
      "extends": [
        "plugin:jest/recommended"
      ],
      "globals": {
        "__basedir": "readonly",
        "generateFixture": "readonly"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "comma-dangle": 0,
    "consistent-return": 1,
    "jsdoc/no-undefined-types": [1, { "definedTypes": ["html"] }],
    "jsdoc/require-param-description": 0,
    "jsdoc/require-property-description": 0,
    "jsdoc/require-returns-description": 0,
    "jsdoc/tag-lines": [
      "warn",
      "always",
      {
        "count": 0,
        "noEndLines": true
      }
    ],
    "max-len": [
      "error",
      {
        "code": 240,
        "ignoreUrls": true
      }
    ],
    "no-console": 0,
    "no-debugger": 1,
    "no-plusplus": 0,
    "no-var": 2,
    "node/no-unsupported-features/es-syntax": 1,
    "node/shebang": 0,
    "node/no-unpublished-bin": 0,
    "node/no-unpublished-require": [
      "error",
      {
        "allowModules": ["shelljs", "mockery", "mock-fs", "std-mocks", "chai"]
      }
    ],
    "padded-blocks": 0,
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "singleQuote": true,
        "trailingComma": "none",
        "printWidth": 120
      }
    ],
    "space-before-function-paren": 0
  }
}
